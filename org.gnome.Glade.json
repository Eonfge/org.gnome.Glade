{
    "app-id": "org.gnome.Glade",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.36",
    "sdk": "org.gnome.Sdk",
    "command": "glade",
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc", "--socket=fallback-x11",
        /* Wayland access */
        "--socket=wayland",
        /* We want full fs access so we can read the files */
        "--filesystem=host",
        /* Allow survey to work */
        "--share=network",
        /* Support GL widgets */
        "--device=dri"
    ],
    "cleanup": ["/include", "/lib/pkgconfig",
                "/share/pkgconfig", "/share/aclocal",
                "/man", "/share/man", "/share/gtk-doc",
                "/share/vala",
                "*.la", "*.a"],
    "modules": [
        {
            "name": "glade",
            "config-opts": ["--disable-man-pages", "--disable-introspection"],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/glade/3.36/glade-3.36.0.tar.xz",
                    "sha256": "19b546b527cc46213ccfc8022d49ec57e618fe2caa9aa51db2d2862233ea6f08"
                },
                {
                    "type": "patch",
                    "path": "Add-latest-release-info-to-appdata.patch"
                }
            ],
            "modules": [
                "shared-modules/intltool/intltool-0.51.json"
            ]
        },
        {
            "name" : "libhandy",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dexamples=false",
                "-Dglade_catalog=enabled",
                "-Dintrospection=disabled",
                "-Dtests=false",
                "-Dvapi=false"
            ],
            "sources" : [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libhandy/1.0/libhandy-1.0.0.tar.xz",
                    "sha256": "a9398582f47b7d729205d6eac0c068fef35aaf249fdd57eea3724f8518d26699"
                }
            ]
        }
    ]
}
